$("ul.errors").html("")
<% if @student.errors.any? %>
  <% @student.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".student-index").html("<%= escape_javascript(render 'students/index') %>")
  $("#student-modal").modal("hide")
<% end %>